@model RhayFernando.Models.Supplier

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detail Supplier";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div class="panel	panel-primary">
        <div class="panel-heading">
            Details Supplier
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon	glyphicon-user"></i>
                    </span>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
        </div>
        <div class="panel-footer	panel-info">
            @Html.ActionLink("Change", "Edit", new { id = Model.SupplierID }, new { @class = "btn	btn-info" })
            @Html.ActionLink("Back to list", "Index", null, new { @class = "btn	btn-info" })
        </div>
    </div>
    @Html.Partial("~/views/Products/_BySupplier.cshtml", Model.Products.ToList())


    @section ScriptPage{

        <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liSuppliers').addClass("active");
        });

        </script>
    }
</body>
</html>
